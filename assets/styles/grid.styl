@import '~media-query-mixins/_mixins';

.row, .column
  display: flex;
.row
  flex-direction: row;

  &.center
    justify-content: center;
  &.left
    justify-content: flex-start;
  &.right
    justify-content: flex-end;

  &.middle
    align-items: center;
  &.top
    align-items: flex-start;
  &.bottom
    align-items: flex-end;
.column
  flex-direction: column;

  &.center
    justify-content: center;
  &.left
    justify-content: flex-start;
  &.right
    justify-content: flex-end;

  &.middle
    align-items: center;
  &.top
    align-items: flex-start;
  &.bottom
    align-items: flex-end;


for i in (1..5)
    .f-{i}
      flex-grow: 1;
      flex-shrink: 1;
      flex-basis: 100%;
      +sm()
        flex-grow: 0;
        flex-shrink: 0;
        flex-basis: i * 320px;
